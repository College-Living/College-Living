<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/login_bg" >
    
    <!-- User registration input -->

    <LinearLayout
        android:id="@+id/registerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center|top"
        android:gravity="top"
        android:orientation="vertical" >
		
		<TextView
		    android:id="@+id/reg_banner"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:background="@color/banner_bg"
		    android:gravity="center"
		    android:paddingBottom="20dp"
		    android:paddingTop="20dp"
		    android:text="Registration"
		    android:textAppearance="?android:attr/textAppearanceLarge"
		    android:textColor="@color/white"
		    android:textSize="30sp"
		    android:textStyle="bold" />

		<LinearLayout
		    android:layout_width="300dp"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center"
		    android:gravity="center_horizontal"
		    android:orientation="vertical" >

		    <TextView
		        android:id="@+id/TextView02"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="left"
		        android:layout_weight="7"
		        android:text="Personal Information"
		        android:textColor="@color/white"
		        android:textSize="20sp"
		        android:textStyle="bold" />

		    <TextView
		        android:id="@+id/TextView01"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="left"
		        android:layout_weight="7"
		        android:text="Please fill out these fields."
		        android:textColor="@color/white"
		        android:textSize="14sp" />

		    <EditText
		        android:id="@+id/registration_email"
		        style="@style/Input_field"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_weight="7"
		        android:ems="10"
		        android:hint="E-mail"
		        android:inputType="textEmailAddress" />

		    <EditText
		        android:id="@+id/registration_pw"
		        style="@style/Input_field"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:ems="10"
		        android:hint="Password"
		        android:inputType="textPassword" />

		    <EditText
		        android:id="@+id/registration_confirm_pw"
		        style="@style/Input_field"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:ems="10"
		        android:hint="Confirm Password"
		        android:inputType="textPassword" />

		    <EditText
		        android:id="@+id/registration_fname"
		        style="@style/Input_field"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:ems="10"
		        android:hint="First Name"
		        android:inputType="textPersonName" />

		    <EditText
		        android:id="@+id/registration_lname"
		        style="@style/Input_field"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:ems="10"
		        android:hint="Last Name"
		        android:inputType="textPersonName" />

		    <EditText
		        android:id="@+id/registration_displayname"
		        style="@style/Input_field"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:ems="10"
		        android:hint="Display Name"
		        android:inputType="textPersonName" />

		    <EditText
		        android:id="@+id/registration_phonenum"
		        style="@style/Input_field"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:ems="10"
		        android:hint="Phone Number"
		        android:inputType="phone" />

		    <TextView
		        android:id="@+id/textView1"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="left"
		        android:layout_weight="7"
		        android:text="Questionnaire"
		        android:textColor="@color/white"
		        android:textSize="20sp"
		        android:textStyle="bold" />

		    <TextView
		        android:id="@+id/textView2"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="left"
		        android:layout_weight="7"
		        android:text="Please answer the following questions to help match you with other users."
		        android:textColor="@color/white"
		        android:textSize="14sp" />

		    <LinearLayout
		        android:id="@+id/questionBlock"
		        android:layout_width="280dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="7"
		        android:orientation="vertical" >
		    </LinearLayout>

		    <Button
		        android:id="@+id/submitRegisterBtn"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_weight="7"
		        android:gravity="center"
		        android:text="Register Account"
		        android:textColor="@color/white" />
		</LinearLayout>

    </LinearLayout>
    

</ScrollView>